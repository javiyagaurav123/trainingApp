<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Backgroundcolor"
    tools:context=".activities.ToolsOptionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_option"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/Button_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="Tools"
        android:textSize="27dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/Layout_tools_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_user_profile_image"
        android:layout_centerInParent="true"
        android:background="@color/Backgroundcolor"
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/contact_style"
            android:gravity="center">

            <ImageView
                android:id="@+id/ic_contact"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:contentDescription="TODO"
                android:src="@drawable/ic_contact" />


            <ImageView
                android:id="@+id/ic_list_user"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/ic_contact"
                android:contentDescription="TODO"
                android:src="@drawable/ic_user_list" />

            <ImageView
                android:id="@+id/ic_web_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_contact"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:contentDescription="TODO"
                android:src="@drawable/ic_web_services" />

            <ImageView
                android:id="@+id/ic_broadcast_recever"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_list_user"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/ic_web_service"
                android:contentDescription="TODO"
                android:src="@drawable/ic_broadcast_recerver" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>