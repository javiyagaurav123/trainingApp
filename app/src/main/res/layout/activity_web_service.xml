<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ab_sidenavbarcolor"
    tools:context=".activities.WebServiceActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_web_services"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/Button_color"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web services"
            android:layout_marginLeft="40dp"
            android:textSize="25dp"/>

    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView
        android:id="@+id/Layout_tools_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_user_profile"
        android:layout_centerInParent="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/contact_style"
            android:gravity="center">

            <Button
                android:id="@+id/btn_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btn_put"
                android:background="@drawable/button_roundshap"
                android:text="GET" />


            <Button
                android:id="@+id/btn_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_get"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_roundshap"
                android:text="POST" />

            <Button
                android:id="@+id/btn_put"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_contact"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_roundshap"
                android:text="PUT" />/>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_put"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_roundshap"
                android:text="DELETE" />/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>